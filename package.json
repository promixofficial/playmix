{
  "name": "playmix",
  "version": "2.0.0",
  "description": "YouTube Floating Player",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64  --prune=true --icon=img/icons/icon.icns --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32  --prune=true --icon=img/icons/pmx-logo-128.ico --out=release-builds ",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64  --prune=true --icon=img/icons/pmx-logo-128.png --out=release-builds",
    "inst-win": "node ./scripts/createWinInstaller.js"
  },
  "author": "Akira Hanashiro",
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.7.8",
    "electron-winstaller": "^2.6.3"
  }
}
